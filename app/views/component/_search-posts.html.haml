.posts-wrapper.search-wrapper
  .container
    %h2.posts-wrapper__title.search-wrapper__title
      = "\"#{@ideas_count}\"件の検索結果"
      = icon 'fas', 'search'
    #slide
      SLIDE
      = image_tag '/assets/slide'
    .card-wrapper
      - @ideas.each do |idea|
        .card
          = link_to idea_path(idea.id), class: 'card__top' do
            .card__top--title
              = idea.title
            .card__top--text
              = truncate(idea.content, length: 108)
            .card__top--user-name
              = "投稿者 : #{idea.user.name}"
          .card__bottom
            = image_tag '/assets/shirokuma.png', class: 'card__bottom--user-icon'
            .btn-box
              .btn-box__share-btn.btn-box__btn
                = icon 'fas', 'share-alt'
              .btn-box__like-btn.btn-box__btn
                = icon 'fas', 'heart'
          .card__other
            .card__other--comments
              %p
                = idea.comments.count
              = icon 'fas', 'comments'
            .card__other--likes
              %p
                = idea.likes.count
              = icon 'fas', 'heart'
            .card__other--category
              = idea.category

    = paginate @ideas

    = link_to ideas_path do
      %button.btn.btn-accent
        戻る
    .search-title
      再検索
      = icon 'fas', 'search-minus'
      = icon 'fas', 'search-plus'
    = form_with url: search_ideas_path, local: true, method: 'GET', class: 'search-form' do |f|
      .search-form__select-wrap
        = f.select :search, [['新着順', 0], ['人気順', 3],['コメント数順', 2]]
        = icon 'fas', 'sort-down'
      .search-form__select-wrap
        = f.select :category, @categories
        = icon 'fas', 'sort-down'
      = f.submit '検索する', class: 'search-form__submit'