.posts-wrapper
  .container
    %h2.posts-wrapper__title
      = icon 'far', 'lightbulb'
      新着アイデア
    #slide
      SLIDE
      = image_tag '/assets/slide'
    .card-wrapper
      - @ideas.each do |idea|
        .card
          = link_to idea_path(idea.id), class: 'card__top' do
            .card__top--title
              = idea.title
            .card__top--text
              = truncate(idea.content, length: 108)
            .card__top--user-name
              = "投稿者 : #{idea.user.name}"
          .card__bottom
            -case idea.user.avatar
            -when 0 then
              = image_tag 'shirokuma.png', class: 'card__bottom--user-icon'
            -when 1 then
              = image_tag 'shirokuma.png', class: 'card__bottom--user-icon'
            -else
              = image_tag 'shirokuma.png', class: 'card__bottom--user-icon'
            .btn-box
              .btn-box__share-btn
                = icon 'fas', 'share-alt'
              .btn-box__like-btn
                = icon 'fas', 'heart'
          .card__other
            .card__other--comments
              %p 24
              = icon 'fas', 'comments'
            .card__other--likes
              %p 45
              = icon 'fas', 'heart'
            .card__other--category
              = idea.category

    = link_to ideas_path do
      %button.btn.btn-accent
        もっと見る