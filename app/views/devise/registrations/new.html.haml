// ヘッダー
= render 'component/header'
// サイドバー
= render 'component/sidebar'
%main
  .posts-wrapper
    .container
      %h2.posts-wrapper__title
        = icon 'far', 'user'
        新規会員登録

      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-section
          %h3
            名前
          = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: '※10文字以下'
        .form-section
          %h3 メールアドレス
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'sample@sample.com'
        .form-section
          %h3 パスワード
          = f.password_field :password, autocomplete: "new-password", placeholder: "※#{@minimum_password_length}文字以上"
        .form-section
          %h3 確認用パスワード
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "※#{@minimum_password_length}文字以上"
        .form-section
          = f.submit "登録する"
      = render "devise/shared/links"
// フッター
= render 'component/footer'
